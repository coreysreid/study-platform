{
  "name": "Study Platform Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  
  // Forward Django dev server port
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {
      "label": "Django Dev Server",
      "onAutoForward": "notify"
    }
  },

  // Use docker-compose for full setup
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",

  // Features to install
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },

  // VS Code settings and extensions
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.testing.pytestEnabled": false,
        "python.testing.unittestEnabled": true,
        "editor.formatOnSave": true,
        "[python]": {
          "editor.defaultFormatter": "ms-python.autopep8"
        },
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "batisteo.vscode-django",
        "alexcvzz.vscode-sqlite",
        "streetsidesoftware.code-spell-checker"
      ]
    }
  },

  // Run commands on container creation
  "postCreateCommand": "bash -c 'pip install -r requirements.txt && bash scripts/setup.sh'",

  // Run command after container starts (check for git updates)
  "postStartCommand": "bash -c 'git fetch --quiet 2>/dev/null || true && BEHIND=$(git rev-list --count HEAD..@{u} 2>/dev/null || echo 0) && [ \"$BEHIND\" -gt 0 ] && echo \"⚠️  Your branch is $BEHIND commit(s) behind origin. Run git pull to update.\" || true'",

  // Set environment variables
  "remoteEnv": {
    "DEBUG": "True",
    "DJANGO_SETTINGS_MODULE": "study_platform.settings"
  },

  // Keep container running
  "shutdownAction": "none"
}
