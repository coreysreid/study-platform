# Django core
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# GitHub integration (enables "Report Issue" / "Feedback" buttons)
GITHUB_REPO=owner/repo-name

# OAuth providers â€” leave blank to disable (buttons hidden automatically)
# GitHub OAuth: create app at https://github.com/settings/developers
# Callback URL: https://yourdomain.com/accounts/github/login/callback/
GITHUB_OAUTH_CLIENT_ID=
GITHUB_OAUTH_SECRET=

# Google OAuth: create credentials at https://console.cloud.google.com/
# Callback URL: https://yourdomain.com/accounts/google/login/callback/
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_SECRET=

# Database (leave blank for SQLite in development)
# Railway will set this automatically when you add a PostgreSQL plugin
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Production only (Railway sets PORT automatically)
# PORT=8000
